extends ../../base/base-all.pug

block content
    .sign
        form(novalidate id="form")
          h3.heading Sign Up
          .fields
            p Email
            input(type="email" name="email" placeholder="" required id="email" class="field")
            span.error
            p Login
            input(type="login" name="login" placeholder="" required id="login" class="field")
            span.error
            p First Name
            input(type="text" name="first_name" placeholder="" required id="first_name" class="field")
            span.error
            p Second Name
            input(type="text" name="second_name" placeholder="" required id="second_name" class="field")
            span.error
            p Phone
            input(type="tel" name="phone" placeholder="" required id="phone" class="field")
            span.error
            p Password
            input(type="password" name="password" placeholder="" autocomplete="on" required id="password" class="field")
            span.error
          .buttons
            button(type="submit" class="btn") Create Account
            a(href="./../../index.html" class="btn link") Sign In
    script(src="./../../scripts/sign-up.js" type="module")